                app:layout_constraintBottom_toTopOf="@+id/button_solution_d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_c4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_solution_d"
                style="@style/ButtonStyle"
                android:layout_marginBottom="8dp"
                android:text="D"
                app:layout_constraintBottom_toTopOf="@+id/button_solution"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_solution_c"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_solution"
                style="@style/ButtonStyle"
                android:text="\???"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
