<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="loaded" type="androidx.databinding.ObservableBoolean" />
        <variable name="associationViewModel" type="vr.kostic017.wordassociation.viewmodel.AssociationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground">

        <ProgressBar
            style="@style/ProgressBarStyle"
            android:visibility="@{!loaded ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/rootLayout"
            app:layout_constraintEnd_toEndOf="@+id/rootLayout"
            app:layout_constraintStart_toStartOf="@+id/rootLayout"
            app:layout_constraintTop_toTopOf="@+id/rootLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="@{loaded ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_a1"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="A1"
                app:layout_constraintBottom_toTopOf="@+id/button_a2"
                app:layout_constraintEnd_toStartOf="@+id/button_b1"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_a2"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="A2"
                app:layout_constraintBottom_toTopOf="@+id/button_a3"
                app:layout_constraintEnd_toStartOf="@+id/button_b2"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_a3"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="A3"
                app:layout_constraintBottom_toTopOf="@+id/button_a4"
                app:layout_constraintEnd_toStartOf="@+id/button_b3"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_a4"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="A4"
                app:layout_constraintBottom_toTopOf="@+id/button_solution_a"
                app:layout_constraintEnd_toStartOf="@+id/button_b4"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_solution_a"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="A"
                app:layout_constraintBottom_toTopOf="@+id/button_solution"
                app:layout_constraintEnd_toStartOf="@+id/button_solution_b"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_b1"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="B1"
                app:layout_constraintBottom_toTopOf="@+id/button_b2"
                app:layout_constraintEnd_toStartOf="@+id/button_c1"
                app:layout_constraintStart_toEndOf="@+id/button_a1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_b2"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="B2"
                app:layout_constraintBottom_toTopOf="@+id/button_b3"
                app:layout_constraintEnd_toStartOf="@+id/button_c2"
                app:layout_constraintStart_toEndOf="@+id/button_a2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_b3"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="B3"
                app:layout_constraintBottom_toTopOf="@+id/button_b4"
                app:layout_constraintEnd_toStartOf="@+id/button_c3"
                app:layout_constraintStart_toEndOf="@+id/button_a3"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_b4"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="B4"
                app:layout_constraintBottom_toTopOf="@+id/button_solution_b"
                app:layout_constraintEnd_toStartOf="@+id/button_c4"
                app:layout_constraintStart_toEndOf="@+id/button_a4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_solution_b"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="B"
                app:layout_constraintBottom_toTopOf="@+id/button_solution"
                app:layout_constraintEnd_toStartOf="@+id/button_solution_c"
                app:layout_constraintStart_toEndOf="@+id/button_solution_a"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_c1"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="C1"
                app:layout_constraintBottom_toTopOf="@+id/button_c2"
                app:layout_constraintEnd_toStartOf="@+id/button_d1"
                app:layout_constraintStart_toEndOf="@+id/button_b1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_c2"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="C2"
                app:layout_constraintBottom_toTopOf="@+id/button_c3"
                app:layout_constraintEnd_toStartOf="@+id/button_d2"
                app:layout_constraintStart_toEndOf="@+id/button_b2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_c3"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="C3"
                app:layout_constraintBottom_toTopOf="@+id/button_c4"
                app:layout_constraintEnd_toStartOf="@+id/button_d3"
                app:layout_constraintStart_toEndOf="@+id/button_b3"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_c4"
                style="@style/ButtonStyle"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="C4"
                app:layout_constraintBottom_toTopOf="@+id/button_solution_c"
                app:layout_constraintEnd_toStartOf="@+id/button_d4"
                app:layout_constraintStart_toEndOf="@+id/button_b4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button_solution_c"
                style="@style/ButtonStyle"
